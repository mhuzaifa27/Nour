<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_white"
    tools:context=".Activities.ModifyProductActivity">

    <include
        android:id="@+id/header_home"
        layout="@layout/app_header_with_logo"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="20dp"
        android:layout_below="@+id/header_home">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Modify your product"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            android:textColor="@color/black">

        </TextView>
        <androidx.cardview.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            card_view:cardBackgroundColor="@color/color_background"
            card_view:cardCornerRadius="25dp"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="5dp"
            android:paddingHorizontal="10dp"
            card_view:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginHorizontal="20dp"
                android:background="@color/color_background">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:textSize="15sp"
                    android:background="@color/color_background"
                    android:textColor="@color/grey">

                </TextView>
                <EditText
                    android:id="@+id/et_name"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/color_background"
                    android:hint="My Wallet"
                    android:textColor="@color/black"
                    android:layout_marginRight="10dp"
                    android:fontFamily="@font/fira_sans_regular"
                    android:gravity="left|center_vertical"
                    android:layout_marginLeft="10dp"
                    android:textColorHint="@color/grey" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            card_view:cardBackgroundColor="@color/color_background"
            card_view:cardCornerRadius="25dp"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="5dp"
            android:paddingHorizontal="10dp"
            card_view:cardElevation="4dp">
        <RelativeLayout
            android:id="@+id/rl_select_country"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="20dp"
            android:background="@color/color_background"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Type"
                android:textSize="15sp"
                android:layout_centerVertical="true"
                android:background="@color/color_background"
                android:textColor="@color/grey">

            </TextView>
            <Spinner
                android:id="@+id/spinner_types"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/tv_type"
                android:background="@android:color/transparent"
                android:entries="@array/list_of_types"
                android:gravity="center"
                android:spinnerMode="dropdown" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/ic_arrow_down" />
        </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardBackgroundColor="@color/color_background"
            card_view:cardCornerRadius="25dp"
            android:layout_marginTop="20dp"
            android:paddingHorizontal="10dp"
            android:layout_marginHorizontal="5dp"
            card_view:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="10dp"
                android:background="@color/color_background">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Other"
                    android:paddingLeft="10dp"
                    android:textSize="15sp"
                    android:background="@color/color_background"
                    android:textColor="@color/grey">

                </TextView>
                <EditText
                    android:id="@+id/et_comment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/color_background"
                    android:hint="This is a loooooooooong comment here which is also multiline for myself."
                    android:textColor="@color/black"
                    android:layout_marginRight="10dp"
                    android:fontFamily="@font/fira_sans_regular"
                    android:gravity="left|center_vertical"
                    android:layout_marginLeft="10dp"
                    android:textColorHint="@color/grey" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            card_view:cardBackgroundColor="@color/color_background"
            card_view:cardCornerRadius="25dp"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="5dp"
            android:paddingHorizontal="10dp"
            card_view:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginHorizontal="20dp"
                android:background="@color/color_background">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date of Registration"
                    android:textSize="15sp"
                    android:background="@color/color_background"
                    android:textColor="@color/grey">

                </TextView>
                <EditText
                    android:id="@+id/et_registeration_date"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/color_background"
                    android:hint="16-03-2020"
                    android:textColor="@color/black"
                    android:layout_marginRight="10dp"
                    android:editable="false"
                    android:fontFamily="@font/fira_sans_regular"
                    android:gravity="left|center_vertical"
                    android:layout_marginLeft="10dp"
                    android:textColorHint="@color/grey" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            card_view:cardBackgroundColor="@color/color_background"
            card_view:cardCornerRadius="25dp"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="5dp"
            android:paddingHorizontal="10dp"
            card_view:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginHorizontal="20dp"
                android:background="@color/color_background">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Serial Number"
                    android:textSize="15sp"
                    android:background="@color/color_background"
                    android:textColor="@color/grey">

                </TextView>
                <EditText
                    android:id="@+id/et_serial_number"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/color_background"
                    android:hint="A1B2C3D4E5F6G7H8"
                    android:textColor="@color/black"
                    android:layout_marginRight="10dp"
                    android:editable="false"
                    android:fontFamily="@font/fira_sans_regular"
                    android:gravity="left|center_vertical"
                    android:layout_marginLeft="10dp"
                    android:textColorHint="@color/grey" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/btn_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_bg_red_rounded"
            android:layout_marginTop="20dp"
            android:text="Save"
            android:layout_marginHorizontal="5dp"
            android:textAllCaps="false"
            android:textSize="14sp"
            android:textColor="@color/light_white">
        </Button>
    </LinearLayout>

</RelativeLayout>